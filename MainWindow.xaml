<Window x:Class="SaltLamp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaltLamp" 
        mc:Ignorable="d"
        Title="SaltLamp" 
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" >
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="{x:Type DataGrid}" >
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Connect" Click="OnConnectClicked" />
        <Button Grid.Column="1" Grid.Row="0" Content="Disconnect" Click="OnDisconnectClicked"  IsEnabled="{Binding CommandButtonsEnabled}" />

        <Button Grid.Column="0" Grid.Row="2" Content="Off" Click="OnCommandClicked" Tag="LampState0" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Red" Click="OnCommandClicked" Tag="LampState10" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Green" Click="OnCommandClicked" Tag="LampState20" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="3" Grid.Row="2" Content="Blue" Click="OnCommandClicked" Tag="LampState30" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="1" Grid.Row="3" Content="Red Loop" Click="OnCommandClicked" Tag="LampState40" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="2" Grid.Row="3" Content="Green Loop" Click="OnCommandClicked" Tag="LampState50" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="3" Grid.Row="3" Content="Blue Loop" Click="OnCommandClicked" Tag="LampState60" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="1" Grid.Row="4" Content="Red Blink" Click="OnCommandClicked" Tag="LampState70" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="2" Grid.Row="4" Content="Green Blink" Click="OnCommandClicked" Tag="LampState80" IsEnabled="{Binding CommandButtonsEnabled}"/>
        <Button Grid.Column="3" Grid.Row="4" Content="Blue Blink" Click="OnCommandClicked" Tag="LampState90" IsEnabled="{Binding CommandButtonsEnabled}"/>
    </Grid>


</Window>
